{
    "name": "acquia/blt-project",
    "description": "Project template for Drupal 8 sites built with BLT.",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "acquia/blt": "^9.1.0",
        "cweagans/composer-patches": "^1.6",
        "drupal/adminimal_admin_toolbar": "^1.7",
        "drupal/adminimal_theme": "^1.3",
        "drupal/cmis": "dev-8.x-2.x",
        "drupal/cshs": "^1.0@beta",
        "drupal/field_group": "^1.0",
        "drupal/group": "^1.0@RC",
        "drupal/menu_token": "^1.0@alpha",
        "drupal/metatag": "^1.5",
        "drupal/paragraphs": "^1.3",
        "drupal/pathauto": "^1.2",
        "drupal/token": "^1.3",
        "drupal/workbench": "^1.0",
        "phpmd/phpmd": "^2.6"
    },
    "require-dev": {
        "geerlingguy/drupal-vm": "^4.8"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "enable-patching": true,
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "merge-plugin": {
            "require": [
                "blt/composer.required.json",
                "blt/composer.suggested.json"
            ],
            "merge-extra": true,
            "merge-extra-deep": true,
            "merge-scripts": true,
            "replace": false,
            "ignore-duplicates": true
        },
        "patches": {
            "drupal/menu_token": {
                "Call to a member function getType() on null when the NodeType condition plugin gets an empty context": "https://www.drupal.org/files/issues/menu_token-no_context_fix-2923651-3.patch"
            },
            "drupal/cmis": {
                "Remove checkClient() and fix getContentStream() call": "patches/remove-check-client-fix-get-content-stream-2608214-23.patch"
            }
        }
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "cmis": {
            "type": "vcs",
            "url": "https://git.drupal.org/project/cmis.git"
        }
    }
}
